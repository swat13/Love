<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:background="@drawable/about_us_back"
		    android:orientation="vertical" >
		    <RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="0dp"
			    android:layout_weight="0.10">
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <Button
			            android:id="@+id/menu"
			            android:layout_width="0dp"
			            android:layout_weight="0.15"
			            android:layout_height="wrap_content"
			            android:background="@drawable/secrec_top_left" />
				    <RelativeLayout
				        android:id="@+id/rl" 
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.85"
					    android:background="@drawable/secrec_top_right">
			    	</RelativeLayout>
			    </LinearLayout>
			    <TextView
		            android:id="@+id/titlePage"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:layout_alignParentTop="true"
			        style="@android:style/TextAppearance.Large"
			        android:text="درباره ما"
			        android:textColor="#fefefe"/>
		    </RelativeLayout>
		    
		    <ScrollView 
			    android:layout_width="fill_parent"
			    android:layout_height="0dp"
			    android:layout_weight="0.86"
			    android:layout_margin="5dp">
					<LinearLayout 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:fillViewport="true"
					    android:orientation="vertical" >
					        <TextView
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:id="@+id/b1"
							    android:textColor="#30878e"
						        style="@android:style/TextAppearance.Medium"
						        android:layout_gravity="center"
						        android:padding="5dp"
						        android:lineSpacingExtra="11dp"
						        android:gravity="center|right"
							    android:text="بعد از سال ها تلاش و تجربه های گوناگون در زمینه های مختلف تصمیم گرفتیم پا در عرصه برنامه های اندروید بگذاریم.\n
	تجربه های مختلفی داشتیم؛ پیاده سازی و نگهداری شبکه، دوربین مداربسته، برندسازی و تبلیغات،  گرافیک و طراحی UI ,UX طراحی سایت و سیستم مدیریت محتوا و... .\n
	اما این عرصه بخاطر داشتن مخاطب های مختلف با سلیقه های گوناگون باعث شد فعالیت داخل آن کمی سخت شود. نرم افزاری که در دستان شما بزرگواران قرار دارد به منظور سرگرم کردن شما عزیزان به وجود آمده.\n
	امیدواریم که توانسته باشیم رضایت شما را جلب کرده باشیم. شما بزرگواران نیز میتوانید درصورت داشتن انتقاد، پیشنهاد ویا ایده خاصی ما را باخبر سازید.\n
	در آخر هم از شما عزیزان درخواست دارم با ثبت مشخصات خود در این برنامه از اخبار و برنامه های جدید مطلع باشید .\n
	\n
	ممنون از آقای علی فریدونی برای پیاده سازی(Develop)
	و آقای محمدرضا رضوانی برای طراحی رابط کاربری
	(UI , UX)
	این برنامه.\n
	منبع : سایت horoscope.com
	
	"/>
				    </LinearLayout>
			</ScrollView>
	   	    
		    
		    <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="bottom|center"
			    android:layout_margin="5dp"
			    android:layout_gravity="bottom|right"
			    android:orientation="horizontal">
		        <LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="right"
				    android:layout_gravity="center"
				    android:orientation="vertical" >
				    <TextView
			            android:id="@+id/b2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#30878e"
				        style="@android:style/TextAppearance.Medium"
				        android:gravity="center"
				        android:layout_marginRight="10dp"
				        android:text="www.MasterArt.ir\n
	ایمیل:\n
	 app@MasterArt.ir"/>
				    <TextView
			            android:id="@+id/b3"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#a3a3a3"
				        style="@android:style/TextAppearance.Medium"
				        android:gravity="center"
				        android:text=" گروه طراحی و نرم افزاری هنر برتر"/>
			    </LinearLayout>
			    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="right"
			        android:background="@drawable/about_honar_h" />
		    </LinearLayout>
		    
		</LinearLayout>
	    
		<FrameLayout 
	    android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="false"
        android:divider="@android:color/transparent">
      
	    <LinearLayout
	       	android:layout_width="match_parent"
	       	android:layout_height="match_parent"
	       	android:orientation="horizontal">
			<RelativeLayout
		       	android:layout_width="0dp"
		       	android:layout_weight="0.74"
		       	android:layout_height="match_parent"
		       	android:background="@drawable/slide_left"
		       	android:orientation="horizontal">
		       	
		       <!-- for close menu Button -->
		        <!-- for shape0 -->
		        <Button
		            android:id="@+id/close"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_marginTop="30dp"
		            android:layout_centerHorizontal="true"
		            android:background="@drawable/close_menu"/>

		        <Button
		            android:id="@+id/s1"
		            android:layout_width="150dp"
		            android:layout_height="10dp"
		            android:layout_below="@+id/close"
		            android:layout_centerHorizontal="true"
		            android:layout_marginTop="15dp"
		            android:background="@drawable/shape0" />

		        <!-- for textview mainPage -->
		        <!-- for shape1-->
		        <TextView
	               	android:id="@+id/mainText"
	               	android:layout_below="@+id/s1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:layout_marginTop="10dp"
			        android:onClick="onClick"
			        android:clickable="true"
			        android:layout_toLeftOf="@+id/mainText2"
			        android:text="صفحه اصلی" />
		        <TextView
	               	android:id="@+id/mainText2"
	               	android:layout_below="@+id/s1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:layout_marginTop="10dp"
			        android:visibility="invisible"
			        android:layout_alignParentRight="true"
			        android:text="صف" />
		        <TextView
	               	android:id="@+id/mainText3"
	               	android:layout_below="@+id/mainText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:visibility="invisible"
			        android:layout_alignParentRight="true"
			        android:text="صف" />
		        <Button
		            android:id="@+id/s2"
		            android:layout_width="match_parent"
		            android:layout_height="10dp"
		            android:layout_below="@+id/mainText"
		            android:layout_toLeftOf="@+id/mainText3"
		            android:background="@drawable/shape1"/>
		        <!-- for textview talebini -->
		        <!-- for shape1-->
		        <TextView
	               	android:id="@+id/magicText"
	               	android:layout_below="@+id/s2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:onClick="onClick"
			        android:clickable="true"
			        android:layout_marginTop="10dp"
			        android:layout_alignParentRight="true"
			        android:text="طالع بینی" />

		        <Button
		            android:id="@+id/s3"
		            android:layout_width="match_parent"
		            android:layout_height="10dp"
		            android:layout_below="@+id/magicText"
		            android:background="@drawable/shape1"/>		        
		        <!-- for textview sangmah -->
		        <!-- for shape1-->
		        <TextView
		            android:layout_below="@+id/s3"
	               	android:id="@+id/monthStoneText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:layout_marginTop="10dp"
			        android:onClick="onClick"
			        android:clickable="true"
			        android:layout_toLeftOf="@+id/monthStoneText2"
			        android:text="سنگ ماه" />
		        <TextView
		            android:layout_below="@+id/s3"
	               	android:id="@+id/monthStoneText2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:visibility="invisible"
			        android:layout_marginTop="10dp"
			        android:layout_alignParentRight="true"
			        android:text="سن" />
		        <Button
		            android:id="@+id/s4"
		            android:layout_width="match_parent"
		            android:layout_height="10dp"
		            android:layout_below="@+id/monthStoneText"
		            android:background="@drawable/shape1"/>
		        <!-- for textview mainPage -->
		        <!-- for shape1-->
		        <TextView
		            android:layout_below="@+id/s4"
	               android:id="@+id/goodWifeText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:layout_marginTop="10dp"
			        android:onClick="onClick"
			        android:clickable="true"
			        android:layout_toLeftOf="@+id/goodWifeText2"
			        android:text="همسر ایده آل" />
		        <TextView
		            android:layout_below="@+id/s4"
	               android:id="@+id/goodWifeText2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:layout_marginTop="10dp"
			        android:layout_alignParentRight="true"
			        android:visibility="invisible"
			        android:text="هم" />
		        <TextView
		            android:layout_below="@+id/goodWifeText"
	               android:id="@+id/goodWifeText3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:layout_alignParentRight="true"
			        android:visibility="invisible"
			        android:text="هم" />
		        <Button
		            android:id="@+id/s5"
		            android:layout_width="match_parent"
		            android:layout_height="10dp"
		            android:layout_below="@+id/goodWifeText"
		            android:background="@drawable/shape1"
		            android:layout_toLeftOf="@+id/goodWifeText3"/>
		        
		        <!-- for textview mainPage -->
		        <TextView
		            android:layout_below="@+id/s5"
	               	android:id="@+id/secretLoveText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:onClick="onClick"
			        android:clickable="true"
			        android:layout_marginTop="10dp"
			        android:layout_toLeftOf="@+id/secretLoveText2"
			        android:text="اسرار ماه" />
		        <TextView
		            android:layout_below="@+id/s5"
	               	android:id="@+id/secretLoveText2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:layout_marginTop="10dp"
			        android:visibility="invisible"
			        android:layout_alignParentRight="true"
			        android:text="abcdef" />
		        <TextView
		            android:layout_below="@+id/secretLoveText"
	               	android:id="@+id/secretLoveText3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:visibility="invisible"
			        android:layout_alignParentRight="true"
			        android:text="abcdef" />
		        <Button
		            android:id="@+id/s6"
		            android:layout_width="match_parent"
		            android:layout_height="10dp"
		            android:layout_below="@+id/secretLoveText"
		            android:layout_toLeftOf="@+id/secretLoveText3"
		            android:background="@drawable/shape1"/>
		        <TextView
		            android:layout_below="@+id/s6"
	               	android:id="@+id/aboutText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:onClick="onClick"
			        android:clickable="true"
			        android:layout_marginTop="10dp"
			        android:layout_toLeftOf="@+id/aboutText2"
			        android:text="درباره ما" />
		        <TextView
		            android:id="@+id/aboutText2"
		            android:layout_below="@+id/s6"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:visibility="invisible"
			        android:layout_marginTop="10dp"
			        android:layout_alignParentRight="true"
			        android:text="درباره مادرباره ما" />
		        <TextView
		            android:id="@+id/aboutText3"
		            android:layout_below="@+id/aboutText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@android:style/TextAppearance.Medium"
			        android:gravity="right"
			        android:visibility="invisible"
			        android:layout_alignParentRight="true"
			        android:text="درباره مادرباره ما" />
		        <Button
		            android:id="@+id/s7"
		            android:layout_width="match_parent"
		            android:layout_height="10dp"
		            android:layout_toLeftOf="@+id/aboutText3"
		            android:layout_below="@+id/aboutText"
		            android:background="@drawable/shape1"/>
		        <!-- for textview mainPage -->
		        <!-- for shape1-->
		        
        	</RelativeLayout>
        	<RelativeLayout
		       	android:layout_width="0dp"
		       	android:layout_weight="0.26"
		       	android:layout_height="match_parent"
		       	android:background="@drawable/slide_right"
		       	android:orientation="horizontal">
		        </RelativeLayout>
		   	<!-- <View
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_weight="@dimen/d6" /> -->
	   </LinearLayout>
	</FrameLayout>  
        
</android.support.v4.widget.DrawerLayout>
		
		
