
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/result_back"
	android:gravity="center">
	    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="0.14"
	    android:background="@drawable/result_top">
        <TextView
            android:id="@+id/titlePage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        style="@android:style/TextAppearance.Large"
	        android:textColor="#fefefe"/>
   	</RelativeLayout>

   	<ScrollView
   	    android:id="@+id/scrollView1"
   	    android:layout_width="match_parent"
   	    android:layout_height="0sp"
   	    android:layout_marginTop="5dp"
        android:layout_weight="1">
   	    <LinearLayout
   	        android:id="@+id/li"
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:gravity="center"
   	        android:orientation="vertical">
   	        <TextView
	            android:id="@+id/content"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:padding="10dp"
		        style="@android:style/TextAppearance.Medium"
		        android:lineSpacingExtra="5dp"
		        android:textColor="#fff600"/>
   	    </LinearLayout>
   	</ScrollView>
    	
   	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="0sp"
	    android:layout_weight="0.18"
	    android:orientation="vertical">
   	    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="0.2"
		    android:background="@drawable/result_bottom_top">
        </RelativeLayout>
    	<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="0.8"
		    android:background="@drawable/result_bottom_bott">
	        <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_centerInParent="true"
			    android:gravity="center">
		        <Button
		            android:id="@+id/fb"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:layout_margin="5dp"
		            android:layout_marginLeft="10dp"
		            android:onClick="onClick"
		            android:background="@drawable/fb_button" />
		        <Button
		            android:id="@+id/tweet"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:layout_margin="5dp"
		            android:layout_marginLeft="10dp"
		            android:onClick="onClick"
		            android:background="@drawable/tweet_button" />
		        <Button
		            android:id="@+id/insta"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:layout_margin="5dp"
		            android:layout_marginLeft="10dp"
		            android:onClick="onClick"
		            android:background="@drawable/insta_button" />
	        </LinearLayout>
    	</RelativeLayout>
   	</LinearLayout>
        
</LinearLayout>
		
